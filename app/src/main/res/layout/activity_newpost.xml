<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/hover_gray_color"
    android:orientation="vertical"
    android:padding="0dp"
    android:nestedScrollingEnabled="false">

    <!--top layout-->


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="9">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/common_color"
                android:layout_marginBottom="5dp">

                <!--帖子顶部-->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/imageView2"
                        android:src="@drawable/logo"
                        android:background="@drawable/shape_solid_border"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:visibility="gone" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal">

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:text="Zeashon"
                            android:id="@+id/user_name"
                            android:textSize="12dp"
                            android:textColor="@color/black"
                            android:layout_gravity="center"
                            android:background="@drawable/shape_solid_border"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:minWidth="100dp"
                            android:gravity="center"
                            android:layout_marginTop="10dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/postItem_time"
                            android:textSize="12dp"
                            android:textColor="@color/edittext_hint_color"
                            android:layout_gravity="center"
                            android:text="20160531190356"
                            android:layout_marginBottom="5dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_horizontal">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="交付时间:"
                                android:id="@+id/finishTime_hint"
                                android:textColor="@color/black"
                                android:textSize="12dp"
                                android:layout_gravity="center_vertical|right"
                                android:gravity="center_vertical|bottom" />

                            <DatePicker
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/finishTime"
                                android:layout_gravity="left|center_vertical"
                                android:layout_marginLeft="10dp">

                            </DatePicker>
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="50dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="交付地点:"
                                android:id="@+id/finishplace_hint"
                                android:textColor="@color/black"
                                android:textSize="12dp"
                                android:layout_gravity="center_vertical|right"
                                android:layout_weight="1"
                                android:gravity="center_vertical" />

                            <EditText
                                android:layout_width="120dp"
                                android:layout_height="40dp"
                                android:id="@+id/finishPlace"
                                android:textColor="@color/black"
                                android:textSize="12dp"
                                android:hint="如：03车D3211"
                                android:layout_gravity="left|center_vertical"
                                android:layout_weight="1"
                                android:layout_marginLeft="10dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="50dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="交付站点:"
                                android:id="@+id/finishStation_hint"
                                android:textColor="@color/black"
                                android:layout_gravity="center_vertical|right"
                                android:textSize="12dp"
                                android:layout_weight="1"
                                android:gravity="top|center_vertical" />

                            <EditText
                                android:layout_width="120dp"
                                android:layout_height="40dp"
                                android:id="@+id/finishStation"
                                android:textColor="@color/black"
                                android:layout_gravity="left|center_vertical"
                                android:textSize="9dp"
                                android:hint="如：南京站"
                                android:layout_weight="1"
                                android:layout_marginLeft="10dp" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
                <!--分界线-->

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.6dp"
                    android:background="@color/view_grey"
                    android:layout_marginTop="5dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="报酬："
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:textColor="@color/red"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:textSize="12dp" />

                    <EditText
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:id="@+id/remuneration"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:textColor="@color/red"
                        android:background="@drawable/shape_solid_border"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:textSize="12dp"
                        android:paddingRight="5dp"
                        android:hint="如：新疆大枣400g" />

                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="联系方式："
                    android:id="@+id/phoneNumTextHint"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:textColor="@color/red"
                    android:textSize="12dp"
                    android:layout_gravity="center_vertical" />

                    <EditText
                        android:layout_width="120dp"
                        android:layout_height="25dp"
                        android:inputType="phone"
                        android:ems="11"
                        android:id="@+id/phoneNumText"
                        android:background="@drawable/shape_solid_border"
                        android:layout_gravity="center_vertical" />


                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:id="@+id/imageView3"
                        android:layout_weight="1"
                        android:layout_margin="3dp"
                        android:src="@drawable/mypic_1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:id="@+id/imageView4"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:layout_margin="3dp"
                        android:src="@drawable/mypic_2" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:id="@+id/imageView5"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:layout_margin="3dp"
                        android:src="@drawable/mypic_3" />
                </LinearLayout>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/postDetail"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black"
                    android:background="@drawable/shape_solid_border"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:textSize="12dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:hint="任务详情" />

                <Button
                    android:layout_width="120dp"
                    android:layout_height="55dp"
                    android:text="发布"
                    android:id="@+id/publishBtn"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/shape_solid_border"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginBottom="10dp" />

                <!--报酬-->

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <TextView
                    android:id="@+id/dateIdTextView"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Id"
                    android:layout_width="0dp"
                    android:layout_height="30dp"/>

                <TextView
                    android:id="@+id/dateOrderPriceTextView"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="OrderPrice"
                    android:layout_width="0dp"
                    android:layout_height="30dp"/>

                <TextView
                    android:id="@+id/dateCustomTextView"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="CustomName"
                    android:layout_width="0dp"
                    android:layout_height="30dp"/>

                <TextView
                    android:id="@+id/dateCountoryTextView"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="Country"
                    android:layout_width="0dp"
                    android:layout_height="30dp"/>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


    <!--main bottom -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_button_l_width"
            android:gravity="bottom">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="0dp"
                    android:background="@color/common_color"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/IndexPageBtn"
                            android:layout_width="@dimen/bottom_button_s_width"
                            android:layout_height="@dimen/bottom_button_s_width"
                            android:layout_marginTop="1dp"
                            android:background="@drawable/index_empty" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:gravity="center"
                            android:text="主页"
                            android:textColor="@color/black"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/NearbyPageBtn"
                            android:layout_width="@dimen/bottom_button_s_width"
                            android:layout_height="@dimen/bottom_button_s_width"
                            android:layout_marginTop="1dp"
                            android:background="@drawable/group_empty"
                            android:visibility="gone"/>
                        <Button
                            android:id="@+id/ShopPageBtn"
                            android:layout_width="@dimen/bottom_button_s_width"
                            android:layout_height="@dimen/bottom_button_s_width"
                            android:layout_marginTop="1dp"
                            android:background="@drawable/shop_empty"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:gravity="center"
                            android:text="商店"
                            android:textColor="@color/black"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/bottom_button_l_width"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <Button
                            android:id="@+id/NewPostPageBtn"
                            android:layout_width="@dimen/bottom_button_s_width"
                            android:layout_height="@dimen/bottom_button_s_width"
                            android:layout_marginTop="1dp"
                            android:background="@drawable/new_post_filled" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:gravity="center"
                            android:text="发布"
                            android:textColor="@color/black"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/messagePageBtn"
                            android:layout_width="@dimen/bottom_button_s_width"
                            android:layout_height="@dimen/bottom_button_s_width"
                            android:layout_marginTop="1dp"
                            android:background="@drawable/collection_empty" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:gravity="center"
                            android:text="收藏"
                            android:textColor="@color/black"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/personPageBtn"
                            android:layout_width="@dimen/bottom_button_s_width"
                            android:layout_height="@dimen/bottom_button_s_width"
                            android:layout_marginTop="1dp"
                            android:background="@drawable/person_empty" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:gravity="center"
                            android:text="我的"
                            android:textColor="@color/black"
                            android:textSize="10sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/transparent"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center_vertical|center_horizontal"
            android:scaleType="fitXY"
            android:visibility="gone">

            <Button
                android:layout_width="@dimen/bottom_button_s_width"
                android:layout_height="@dimen/bottom_button_s_width"
                android:background="@drawable/new_post_empty" />

        </RelativeLayout>
    </RelativeLayout>


</LinearLayout>
