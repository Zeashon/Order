<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/hover_grey_color"
    android:orientation="vertical"
    android:padding="0dp">

    <LinearLayout
        android:id="@+id/main_top"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/theme_blue"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/logo" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="5dp">

            <Button
                android:id="@+id/SearchEditText"
                android:layout_width="230dp"
                android:layout_height="36dp"
                android:background="@drawable/shape_solid_border"
                android:clickable="false"
                android:gravity="left|center_vertical"
                android:hint="如：03车D1234,20160601"
                android:paddingLeft="2dp"
                android:textColor="@color/edittext_color"
                android:textColorHint="@color/edittext_hint_color" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingRight="10dp">

            <Button
                android:id="@+id/main_search_button"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical|right"
                android:layout_marginLeft="10dp"
                android:background="@drawable/shape_solid_border"
                android:text="搜索"
                android:textColor="@color/black" />
        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="390dp"
        android:layout_weight="1"
        android:nestedScrollingEnabled="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager1"
                android:layout_width="fill_parent"
                android:layout_height="160dp"></android.support.v4.view.ViewPager>

            <!--ad image-->
            <ImageView
                android:id="@+id/AD_image"
                android:layout_width="fill_parent"
                android:layout_height="160dp"
                android:layout_weight="1"
                android:elevation="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/mypic_4"
                android:visibility="gone"/>

            <ListView
                android:id="@+id/showPostListView"
                android:layout_width="fill_parent"
                android:layout_height="1200dp"
                android:layout_weight="1"
                android:cacheColorHint="#00000000"
                android:choiceMode="singleChoice"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />

        </LinearLayout>
    </ScrollView>


    <!--main bottom -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@color/grey_color" />

        <RelativeLayout
            android:id="@+id/bt_main"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_button_l_width"
            android:layout_marginTop="1dp"
            android:gravity="bottom">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="0dp"
                    android:background="@color/common_color"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/IndexPageBtn"
                            android:layout_width="@dimen/bottom_button_s_width"
                            android:layout_height="@dimen/bottom_button_s_width"
                            android:layout_marginTop="1dp"
                            android:background="@drawable/index_filled" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:gravity="center"
                            android:text="主页"
                            android:textColor="@color/black"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/ShopPageBtn"
                            android:layout_width="@dimen/bottom_button_s_width"
                            android:layout_height="@dimen/bottom_button_s_width"
                            android:layout_marginTop="1dp"
                            android:background="@drawable/shop_empty" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:gravity="center"
                            android:text="商店"
                            android:textColor="@color/black"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/bottom_button_l_width"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/NewPostPageBtn"
                            android:layout_width="@dimen/bottom_button_s_width"
                            android:layout_height="@dimen/bottom_button_s_width"
                            android:layout_marginTop="1dp"
                            android:background="@drawable/new_post_empty" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:gravity="center"
                            android:text="发布"
                            android:textColor="@color/black"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/messagePageBtn"
                            android:layout_width="@dimen/bottom_button_s_width"
                            android:layout_height="@dimen/bottom_button_s_width"
                            android:layout_marginTop="1dp"
                            android:background="@drawable/collection_empty" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:gravity="center"
                            android:text="收藏"
                            android:textColor="@color/black"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/personPageBtn"
                            android:layout_width="@dimen/bottom_button_s_width"
                            android:layout_height="@dimen/bottom_button_s_width"
                            android:layout_marginTop="1dp"
                            android:background="@drawable/person_empty" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:gravity="center"
                            android:text="我的"
                            android:textColor="@color/black"
                            android:textSize="10sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/transparent"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center_vertical|center_horizontal"
            android:scaleType="fitXY"
            android:visibility="gone">

            <Button
                android:layout_width="@dimen/bottom_button_s_width"
                android:layout_height="@dimen/bottom_button_s_width"
                android:background="@drawable/new_post_empty" />

        </RelativeLayout>
    </RelativeLayout>


</LinearLayout>
