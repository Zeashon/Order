<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login"
    style="@android:style/Animation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f0">

    <TextView
        android:id="@+id/makeRoad_header"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_gravity="top"
        android:background="#ff00a0e9" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/makeRoad_header"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:text="欢迎注册"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="21sp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/makeRoad_header"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:layout_centerInParent="true"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_weight="0.8">

            <ImageView
                android:id="@+id/user_photo"
                android:layout_width="77dp"
                android:layout_height="77dp"
                android:layout_centerInParent="true"
                android:src="@drawable/logo"
                android:layout_gravity="bottom|center_horizontal" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/newNickName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="25dp"
                android:layout_weight="0.70"
                android:autoText="false"
                android:background="#00ffffff"
                android:hint="昵称" />

        </LinearLayout>

        <View
            android:id="@+id/spit_view2"
            android:layout_width="fill_parent"
            android:layout_height="0.6dp"
            android:layout_below="@+id/l1"
            android:layout_marginLeft="0dp"
            android:background="#d3e3e3" />

        <LinearLayout
            android:id="@+id/l2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/loginName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="25dp"
                android:layout_weight="0.70"
                android:autoText="false"
                android:background="#00ffffff"
                android:hint="手机号码" />

        </LinearLayout>

        <View
            android:id="@+id/spit_view3"
            android:layout_width="fill_parent"
            android:layout_height="0.6dp"
            android:layout_below="@+id/l2"
            android:layout_marginLeft="0dp"
            android:background="#d3e3e3" />

        <LinearLayout
            android:id="@+id/l3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/loginPass01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="25dp"
                android:layout_weight="0.70"
                android:background="#00ffffff"
                android:ems="10"
                android:hint="6-10位的密码"
                android:inputType="textPassword" />

        </LinearLayout>

        <View
            android:id="@+id/spit_view1"
            android:layout_width="fill_parent"
            android:layout_height="0.6dp"
            android:layout_below="@+id/l3"
            android:layout_marginLeft="0dp"
            android:background="#d3e3e3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/loginPass02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="25dp"
                android:layout_weight="0.70"
                android:background="#00ffffff"
                android:ems="10"
                android:hint="再次输入密码"
                android:inputType="textPassword" />

        </LinearLayout>

        <Button
            android:id="@+id/registerBtn"
            android:layout_width="330dp"
            android:layout_height="40dp"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape_solid_border"
            android:text="完成注册"
            android:textColor="@color/black"
            android:textSize="22sp" />

    </LinearLayout>
</RelativeLayout>