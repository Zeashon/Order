<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
    android:clickable="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_color"
        android:layout_marginBottom="5dp">

        <!--帖子顶部-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="50dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/imageView2"
                android:src="@drawable/user_img"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_solid_border"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="100dp"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zeashon"
                    android:id="@+id/user_name"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:textSize="14dp"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6个小时前发布"
                    android:id="@+id/postItem_time"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:textSize="12dp"
                    android:textColor="@color/edittext_hint_color" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="60dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="交付时间:"
                    android:id="@+id/finishTime_hint"
                    android:textColor="@color/black"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="交付地点:"
                    android:id="@+id/finishplace_hint"
                    android:textColor="@color/black"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="交付站点:"
                    android:id="@+id/finishStation_hint"
                    android:textColor="@color/black"
                    android:layout_gravity="center_horizontal"
                    android:textSize="12dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2016.06.01"
                    android:id="@+id/finishTime"
                    android:textColor="@color/black"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="03车/D1234"
                    android:id="@+id/finishPlace"
                    android:textColor="@color/black"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="南京站"
                    android:id="@+id/finishStation"
                    android:textColor="@color/black"
                    android:layout_gravity="center_horizontal"
                    android:textSize="12dp" />
            </LinearLayout>

        </LinearLayout>
        <!--分界线-->

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.6dp"
            android:background="@color/view_grey"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="诱惑：新疆大枣400g"
            android:id="@+id/remuneration"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textColor="@color/red"
            android:background="@drawable/shape_solid_border"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:textSize="12dp"
            android:paddingRight="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="tel：18659194849"
            android:id="@+id/phoneNumText"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textColor="@color/red"
            android:background="@drawable/shape_solid_border"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:textSize="12dp"
            android:paddingRight="5dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/imageView3"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:src="@drawable/mypic_1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/imageView4"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:src="@drawable/mypic_2" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/imageView5"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:src="@drawable/mypic_3" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/postDetail"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:background="@drawable/shape_solid_border"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:textSize="12dp"
            android:paddingRight="5dp"
            android:text="希望有人能帮我带一下南京的咸水鸭，我1号会坐D1234次动车经过南京"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.6dp"
            android:background="@color/view_grey"
            android:layout_marginTop="5dp" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/addCollection"
            android:background="@drawable/btn_selector"
            android:text="点击收藏"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" />


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <TextView
                android:id="@+id/dateIdTextView"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Id"
                android:layout_width="0dp"
                android:layout_height="30dp"/>

        <TextView
                android:id="@+id/dateOrderPriceTextView"
                android:layout_weight="2"
                android:gravity="center"
                android:text="OrderPrice"
                android:layout_width="0dp"
                android:layout_height="30dp"/>

        <TextView
                android:id="@+id/dateCustomTextView"
                android:layout_weight="3"
                android:gravity="center"
                android:text="CustomName"
                android:layout_width="0dp"
                android:layout_height="30dp"/>

        <TextView
                android:id="@+id/dateCountoryTextView"
                android:layout_weight="2"
                android:gravity="center"
                android:text="Country"
                android:layout_width="0dp"
                android:layout_height="30dp"/>
    </LinearLayout>

</LinearLayout>