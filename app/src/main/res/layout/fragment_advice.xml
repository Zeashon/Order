<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_color"
    android:orientation="vertical"
    android:theme="@android:style/Theme.Holo.Light">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:layout_centerInParent="true"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_weight="0.8">

            <ImageView
                android:id="@+id/user_photo"
                android:layout_width="77dp"
                android:layout_height="77dp"
                android:layout_centerInParent="true"
                android:layout_gravity="bottom|center_horizontal"
                android:src="@drawable/logo" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="感谢您的宝贵意见。"
            android:textColor="@color/black" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@color/common_color"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:text="标题"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/advice_title"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_solid_border"
                    android:hint=""
                    android:textColorHint="@color/edittext_hint_color" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:background="#d3e3e3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:text="内容"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/advice_content"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_solid_border"
                    android:hint=""
                    android:textColorHint="@color/edittext_hint_color" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="#d3e3e3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/common_color"
            android:orientation="horizontal">

            <Button
                android:id="@+id/advice_okBtn"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="top|center_horizontal"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:background="@drawable/shape_solid_border"
                android:text="发送"
                android:textColor="@color/black"
                android:textSize="22sp" />

            <Button
                android:id="@+id/advice_cancelBtn"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="top|center_horizontal"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:background="@drawable/shape_solid_border"
                android:text="取消"
                android:textColor="@color/black"
                android:textSize="22sp" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>