<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/hover_grey_color"
    android:orientation="vertical"
    android:padding="0dp">

    <!--top layout-->


    <LinearLayout
        android:id="@+id/main_top"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/showDoingPost"
            android:layout_width="230dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/common_color"
            android:gravity="center"
            android:text="未完成帖子"
            android:textColor="@color/black" />

        <View
            android:layout_width="0.6dp"
            android:layout_height="match_parent"
            android:background="@color/grey_color" />

        <Button
            android:id="@+id/showFinishedPost"
            android:layout_width="230dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/common_color"
            android:text="已过期帖子"
            android:textColor="@color/black" />

    </LinearLayout>

    <TextView
        android:id="@+id/PostNumTextView"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="New Text"
        android:textColor="@color/edittext_color" />

    <ListView
        android:id="@+id/showPostListView"
        android:layout_width="fill_parent"
        android:layout_height="525dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" />


    <!--main bottom -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@color/grey_color" />

        <RelativeLayout
            android:id="@+id/bt_main"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_button_l_width"
            android:layout_marginTop="1dp"
            android:gravity="bottom">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="0dp"
                    android:background="@color/common_color"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/IndexPageBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:layout_width="@dimen/bottom_button_s_width"
                            android:layout_height="@dimen/bottom_button_s_width"
                            android:layout_marginTop="1dp"
                            android:background="@drawable/index_empty"
                            android:clickable="false"
                            android:focusable="false" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:gravity="center"
                            android:text="主页"
                            android:textColor="@color/black"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ShopPageBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:layout_width="@dimen/bottom_button_s_width"
                            android:layout_height="@dimen/bottom_button_s_width"
                            android:layout_marginTop="1dp"
                            android:background="@drawable/shop_empty"
                            android:clickable="false"
                            android:focusable="false" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:gravity="center"
                            android:text="商店"
                            android:textColor="@color/black"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/NewPostPageBtn"
                        android:layout_width="@dimen/bottom_button_l_width"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:layout_width="@dimen/bottom_button_s_width"
                            android:layout_height="@dimen/bottom_button_s_width"
                            android:layout_marginTop="1dp"
                            android:background="@drawable/new_post_filled"
                            android:clickable="false"
                            android:focusable="false" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:gravity="center"
                            android:text="发布"
                            android:textColor="@color/black"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/messagePageBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:layout_width="@dimen/bottom_button_s_width"
                            android:layout_height="@dimen/bottom_button_s_width"
                            android:layout_marginTop="1dp"
                            android:background="@drawable/collection_empty"
                            android:clickable="false"
                            android:focusable="false" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:gravity="center"
                            android:text="收藏"
                            android:textColor="@color/black"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/personPageBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:layout_width="@dimen/bottom_button_s_width"
                            android:layout_height="@dimen/bottom_button_s_width"
                            android:layout_marginTop="1dp"
                            android:background="@drawable/person_empty"
                            android:clickable="false"
                            android:focusable="false" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:gravity="center"
                            android:text="我的"
                            android:textColor="@color/black"
                            android:textSize="10sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>
